import { EXTERNAL_EVENTS_SET_HIDDEN_ITEMS } from '@shopify/polaris-viz-core';
import { getEventName } from '../../ColorVisionA11y/utilities.esnext';

function setHiddenItems(id, indexes) {
  const custom = new CustomEvent(getEventName(id, EXTERNAL_EVENTS_SET_HIDDEN_ITEMS), {
    detail: {
      indexes
    }
  });
  window.dispatchEvent(custom);
}

export { setHiddenItems };
