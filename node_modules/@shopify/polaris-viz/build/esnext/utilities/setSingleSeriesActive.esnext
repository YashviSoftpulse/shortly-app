import { COLOR_VISION_SINGLE_ITEM } from '@shopify/polaris-viz-core';
import { getEventName } from '../hooks/ColorVisionA11y/utilities.esnext';

function setSingleSeriesActive(id, index) {
  const custom = new CustomEvent(getEventName(id, COLOR_VISION_SINGLE_ITEM), {
    detail: {
      index
    }
  });
  window.dispatchEvent(custom);
}

export { setSingleSeriesActive };
