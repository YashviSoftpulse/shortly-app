import { useChartContext } from '@shopify/polaris-viz-core';
import { useMemo } from 'react';
import { getLongestTickWidth } from '../utilities/getLongestTickWidth.esnext';

function useDualAxisTicksWidth(leftTicks, rightTicks) {
  const {
    characterWidths
  } = useChartContext();
  return useMemo(() => {
    return {
      leftTickWidth: getLongestTickWidth(leftTicks, characterWidths),
      rightTickWidth: getLongestTickWidth(rightTicks, characterWidths)
    };
  }, [leftTicks, rightTicks, characterWidths]);
}

export { useDualAxisTicksWidth };
