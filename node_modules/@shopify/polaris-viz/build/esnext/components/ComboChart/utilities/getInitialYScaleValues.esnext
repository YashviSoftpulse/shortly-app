function getInitialYScaleValues({
  drawableHeight,
  primaryAxis,
  shouldPlaceZeroInMiddleOfChart
}) {
  if (shouldPlaceZeroInMiddleOfChart) {
    return {
      drawableHeight,
      max: primaryAxis.max,
      min: -primaryAxis.max
    };
  }

  return {
    drawableHeight,
    max: primaryAxis.max,
    min: primaryAxis.min
  };
}

export { getInitialYScaleValues };
